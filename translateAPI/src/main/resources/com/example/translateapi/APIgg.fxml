<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.translateapi.APIgoogleController">
   <Label prefHeight="50.0" prefWidth="798.0" text="Tiếng Anh:">
      <font>
         <Font name="System Bold" size="30.0" />
      </font>
   </Label>
   <TextField fx:id="inputText" alignment="TOP_LEFT" prefHeight="200.0" prefWidth="800.0">
      <font>
         <Font size="15.0" />
      </font></TextField>
   <Button onAction="#translateText" prefHeight="43.0" prefWidth="180.0" text="Translate">
      <font>
         <Font size="20.0" />
      </font></Button>
   <Label prefHeight="39.0" prefWidth="800.0" text="Tiếng Việt:">
      <font>
         <Font name="System Bold" size="30.0" />
      </font>
   </Label>
   <Label fx:id="outputLabel" alignment="TOP_LEFT" prefHeight="261.0" prefWidth="800.0">
      <font>
         <Font size="15.0" />
      </font></Label>
</VBox>
